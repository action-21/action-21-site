---
interface Props {
    tags: string[];
    class?: string;
}

const { tags, class: className = "" } = Astro.props;
---

<div class:list={["w-full flex flex-wrap items-center gap-2", className]}>
    {
        tags.map((item) => (
            <div class="badge badge-soft badge-primary mr-2 font-medium">
                {item}
            </div>
        ))
    }
</div>
